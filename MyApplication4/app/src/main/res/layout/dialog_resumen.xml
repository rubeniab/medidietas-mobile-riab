<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/resumen_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resumen"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad consumida:"
        android:textSize="14sp"
        android:paddingTop="8dp" />

    <EditText
        android:id="@+id/cantidad_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Momento del día:"
        android:textSize="14sp"
        android:paddingTop="8dp" />

    <Spinner
        android:id="@+id/momento_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <!-- Agregar la gráfica de tipo PieChart -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/nutrientesChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video para preparación:"
        android:textSize="14sp"
        android:paddingTop="8dp" />

    <WebView
        android:id="@+id/video_web_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp" />
</LinearLayout>